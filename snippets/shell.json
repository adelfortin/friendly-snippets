    "while_read_file": {
        "prefix": "while_read_file",
        "body": [
            "OLD_IFS=$IFS",
            "IFS='${2:delimiter}'",
            "while read -r ${1:ligne}; do",
            "    ${3:# code ici}",
            "done < ${4:fichier}",
            "IFS=$OLD_IFS"
        ],
