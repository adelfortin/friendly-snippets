    "printregexipv4": {
        "prefix": "printregexipv4",
        "body": [
            "# Regex pour IPv4 et réseaux :",
            "regex_ipv4='^((25[0-5]|2[0-4]\\d|[01]?\\d?\\d)(\\.|$)){4}$'",
            "regex_ipv4_classA='^(?:(?:[1-9]|1\\d|1[0-1]\\d|12[0-6])\\.(25[0-5]|2[0-4]\\d|[01]?\\d?\\d)\\.(25[0-5]|2[0-4]\\d|[01]?\\d?\\d)\\.(25[0-5]|2[0-4]\\d|[01]?\\d?\\d))$'",
