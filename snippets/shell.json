            "regex_mac='^([0-9A-Fa-f]{2}[:-]){5}[0-9A-Fa-f]{2}$'",
            "regex_mac_dot='^([0-9A-Fa-f]{4}\\.){2}[0-9A-Fa-f]{4}$'",
